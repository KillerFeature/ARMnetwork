{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "appName": {
            "type": "string",
            "defaultValue": "sdv001"
        },
        "jumpboxname":{
            "type": "string",
            "defaultValue": "jumpbox"
            },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        },
        "networkSecurityGroupRules": {
            "type": "array",
            "defaultValue": [
                {
                    "name": "RDP",
                    "properties": {
                        "priority": 300,
                        "protocol": "TCP",
                        "access": "Allow",
                        "direction": "Inbound",
                        "sourceAddressPrefix": "*",
                        "sourcePortRange": "*",
                        "destinationAddressPrefix": "*",
                        "destinationPortRange": "3389"
                    }
                }
            ]
        },
        "subnetName": {
            "type": "string",
            "defaultValue": "default"
        },
        "subnetAddressPrefix": {
            "type": "string",
            "defaultValue": "10.1.2.0/24"
        },
        "addressPrefixes": {
            "type": "string",
            "defaultValue": "10.1.2.0/24"
        },
        "dcIP": {
            "type": "string",
            "defaultValue": "10.1.2.4"
        },
        "osDiskType": {
            "type": "string",
            "defaultValue": "Premium_LRS"
        },
        "virtualMachineSize": {
            "type": "string",
            "defaultValue": "Standard_B2s"
        },
        "adminUsername": {
            "type": "string",
            "defaultValue": "scddemouser"
        },
        "adminPassword": {
            "type": "securestring"
        }
    },
    "variables": {
        "virtualNetworkName": "[concat(parameters('appName'),'vnet')]",
        "networkSecurityGroupName": "[concat(parameters('appName'),'-nsg')]",
        "nsgId": "[resourceId(resourceGroup().name, 'Microsoft.Network/networkSecurityGroups', variables('networkSecurityGroupName'))]",
        "vnetId": "[resourceId(resourceGroup().name,'Microsoft.Network/virtualNetworks', variables('virtualNetworkName'))]",
        "subnetRef": "[concat(variables('vnetId'), '/subnets/', parameters('subnetName'))]",
        "dcVmName": "[concat(parameters('appName'), 'dcvm')]",
        "dcNicName": "[concat(parameters('appName'), 'dcnic')]"
    },
    "resources": [
        {
            "name": "[variables('networkSecurityGroupName')]",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2018-08-01",
            "location": "[parameters('location')]",
            "properties": {
                "securityRules": "[parameters('networkSecurityGroupRules')]"
            },
            "tags": {}
        },
        {
            "name": "[variables('virtualNetworkName')]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2018-11-01",
            "location": "[parameters('location')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('addressPrefixes')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[parameters('subnetName')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnetAddressPrefix')]"
                        }
                    }
                ]
            },
            "tags": {}
        },
        {
            "name": "[variables('dcNicName')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2018-10-01",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkSecurityGroups/', variables('networkSecurityGroupName'))]",
                "[concat('Microsoft.Network/virtualNetworks/', variables('virtualNetworkName'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            },
                            "privateIPAllocationMethod": "Static",
                            "privateIPAddress": "[parameters('dcIP')]"
                        }
                    }
                ],
                "networkSecurityGroup": {
                    "id": "[variables('nsgId')]"
                }
            },
            "tags": {}
        },
        {
            "name": "[variables('dcVmName')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2018-06-01",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', variables('dcNicName'))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('virtualMachineSize')]"
                },
                "storageProfile": {
                    "osDisk": {
                        "createOption": "fromImage",
                        "managedDisk": {
                            "storageAccountType": "[parameters('osDiskType')]"
                        }
                    },
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2019-Datacenter-smalldisk",
                        "version": "latest"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('dcNicName'))]"
                        }
                    ]
                },
                "osProfile": {
                    "computerName": "[variables('dcVmName')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]",
                    "windowsConfiguration": {
                        "enableAutomaticUpdates": true,
                        "provisionVmAgent": true
                    }
                }
            },
            "tags": {}
        },
        {
            "apiVersion": "2017-05-10",
            "name": "linkedTemplate",
            "type": "Microsoft.Resources/deployments",
            "dependsOn": [
                "[concat('Microsoft.Network/networkSecurityGroups/', variables('networkSecurityGroupName'))]",
                "[concat('Microsoft.Network/virtualNetworks/', variables('virtualNetworkName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "parameters": {
                    "jumpboxname":{"value": "jumpbox"},
                    "networkSecurityGroupName": {"value":"[variables('networkSecurityGroupName')]"},
                    "subnetName": {"value":"[parameters('subnetName')]"},
                    "virtualNetworkId": {"value":"[variables('vnetId')]"},
                    "adminUsername": {"value":"[parameters('adminUsername')]"},
                    "adminPassword": {"value":"[parameters('adminPassword')]"},
                    "nsgId": {"value":"[variables('nsgId')]"}

                },
                       "templateLink": {
          "uri":"https://raw.githubusercontent.com/KillerFeature/ARMnetwork/master/jumpbox.json",
          "contentVersion":"1.0.0.0"
       }
                

                
            }
        }
    ],
    "outputs": {
        "adminUsername": {
            "type": "string",
            "value": "[parameters('adminUsername')]"
        }
    }
}